<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp" tools:srcCompat="@android:color/black"
            android:id="@+id/recycler_view_home_item_image" android:layout_weight="1" android:visibility="gone"/>

    <TextView
            android:id="@+id/recycler_view_home_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" android:visibility="visible"/>

</LinearLayout>
