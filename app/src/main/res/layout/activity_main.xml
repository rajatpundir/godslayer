<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main.Master" android:baselineAligned="false" android:orientation="vertical">
    <fragment
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:name="solutions.pundir.godslayer.Main.Fragments.FragmentMainContainer"
            android:id="@+id/fragment_main_container" tools:layout_margin="0px"
            tools:layout="@layout/fragment_main_container"/>

    <fragment
            android:id="@+id/fragment_bottom_bar"
            android:name="solutions.pundir.godslayer.Main.Fragments.FragmentBottomBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            tools:layout="@layout/fragment_bottom_bar"
            tools:layout_margin="0px" />
</LinearLayout>