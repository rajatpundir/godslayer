<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:id="@+id/fragment_layout_downloads_torrents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <fragment
                android:id="@+id/fragment_downloads_torrents"
                android:name="solutions.pundir.godslayer.Downloads.Fragments.FragmentDownloadsTorrents"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/fragment_layout_downloads_torrent_stats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

        <fragment
                android:id="@+id/fragment_downloads_torrent_stats"
                android:name="solutions.pundir.godslayer.Downloads.Fragments.FragmentDownloadsTorrentStats"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>