<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:id="@+id/recycler_view_downloads_torrent_episode_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/recycler_view_downloads_torrent_source_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/recycler_view_downloads_torrent_state"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="1">
        <Button
                android:text="START"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/button_downloads_torrent_start"
                android:layout_weight="1"/>
        <Button
                android:text="PAUSE"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/button_downloads_torrent_pause" android:layout_weight="1"/>
        <Button
                android:text="REMOVE"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/button_downloads_torrent_remove" android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
